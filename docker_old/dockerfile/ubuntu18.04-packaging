FROM ubuntu:18.04

ENV container docker
ENV DEBIAN_FRONTEND noninteractive
ENV LANG C.UTF-8
ENV LC_ALL C.UTF-8

ADD 00aptproxy /etc/apt/apt.conf.d
ADD source.list_ubuntu18 /etc/apt/sources.list
RUN apt-get update
RUN apt-get -y upgrade
RUN apt-get -y install apt-utils
RUN apt-get install -y --no-install-recommends \
build-essential \
ca-certificates \
curl \
devscripts \
equivs \
git \
git-buildpackage \
lsb-release \
nano \
pristine-tar \
systemd \
vim

